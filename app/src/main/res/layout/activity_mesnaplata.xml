<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Gumbi za nazad i odjavu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start">

        <Button
            android:id="@+id/backButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onBackClick"
            android:text="Nazad" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/logoutButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Odjava"
            android:onClick="onLogoutClick" />

    </LinearLayout>

    <!-- Naslov -->
    <TextView
        android:id="@+id/restoranname1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RestoranX"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Slika i opis -->
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/plata" />

    <TextView
        android:id="@+id/titleTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biftek na zaru"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descriptionTextView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biftek na aru je ukusno jelo pripremljeno od viskokvalitetnog goveđeg mesa koje je ostajalo u marinadi pečemo na drvenom ugljenu za posebni okus, uz biftek ide i jedan prilog po vašem izboru " />
    <TextView
        android:id="@+id/descriptionTextView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cijena:30e"
        android:textSize="16dp"
        android:textStyle="bold">

    </TextView>

    <TableLayout
        android:id="@+id/likeTable1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <!-- Prvi red sa slikama -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/likeImage1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/like"
                android:contentDescription="Like"
                android:clickable="true"
                android:onClick="onLikeClick" />

            <ImageView
                android:id="@+id/dislikeImage1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/dislike"
                android:contentDescription="Dislike"
                android:clickable="true"
                android:onClick="onDislikeClick" />
        </TableRow>

        <!-- Drugi red sa tekstom i brojem lajkova -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/likeCountTextView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:gravity="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dislikeCountTextView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:gravity="center"
                android:textSize="16sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/bottomNavigation1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:elevation="80dp"
        android:gravity="bottom"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:cardCornerRadius="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/homeIcon1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/gj" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/notificationsIcon1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:onClick="onNotificationsClick"
                android:padding="8dp"
                android:src="@drawable/cupcake" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>



</LinearLayout>

