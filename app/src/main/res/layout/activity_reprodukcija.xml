<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".song">

    <!-- Podesite raspored pjesme ovdje -->
    <!-- Primjer: Dodajte naziv i autora pjesme, te gumb za reprodukciju pjesme -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Naziv pjesme"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autor pjesme"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"/>

    <!-- Dodajte gumb za reprodukciju pjesme -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reproduciraj"
        android:layout_gravity="center_horizontal" />

</FrameLayout>
